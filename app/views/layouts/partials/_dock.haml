    - if (params[:controller] == 'projects' && params[:action] == 'show') || (params[:controller] == 'cards' && params[:action] == 'show')
      %li.launcher.active
        %i.icon-tasks
        =link_to 'Kanban', @current_project
    - else
      %li.launcher
        %i.icon-tasks
        =link_to 'Kanban', @current_project
  - if params[:controller] == 'projects' && params[:action]== 'index'
    %li.launcher.active
      %i.icon-suitcase
      =link_to 'Projects', projects_path
  - else
    %li.launcher
      %i.icon-suitcase
      =link_to 'Projects', projects_path
  - if params[:controller] == 'collaborators'
    %li.launcher.active
      %i.icon-group
      %a{href: collaborators_path} Collaborators
